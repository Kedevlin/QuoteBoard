<div class="text-center container">
  <h1><%= @person.name %></h1>
  <h3><%= @person.bio %></h3>
  <h2>Said by <%= @person.name %></h2>
</div>
<div class="text-center container">
  <table class="table">
    <% @person.spoken_quotes.each do |quote| %>
  <tr>
    <td>
      <%= quote.body %>
    </td>
    <td>
      from <%= quote.poster.name %> at <%= quote.created_at %>
    </td>
 </tr>
 <% end %>
</table>
</div>

<div class="text-center container">
<h2>Heard by <%= @person.name %></h2>
</div>

<div class="text-center container">
  <table class="table">
    <% @person.posted_quotes.each do |quote| %>
  <tr>
    <td>
      <%= quote.body %>
    </td>
    <td>
      Said by <%= quote.speaker.name %> at <%= quote.created_at %>
    </td>
 </tr>
 <% end %>
</table>
</div>

<nav class="text-center container">
  <%= link_to "Back to Main", home_path %>
</nav>
