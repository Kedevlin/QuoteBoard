<h1>Cohort Four Quotes</h1>

<section>
  <%= form_tag person_select_path, method: :get do %>
     <fieldset>
       <legend> Who are you?</legend>
       <%= collection_select(:person, :id, Person.all, :id, :name, prompt: "Select a person:") %>
       <br>
       <%= submit_tag "Go to my quotes page" %>
     </fieldset>
   <% end %>
</section>

<section>
  <table>
    <% @quotes.each do |quote| %>
  <tr>
    <td>
      <%= quote.body %>
    </td>
    <td>
      <%= link_to "#{quote.speaker.name}", home_person_path(quote.speaker) %>
    </td>
 </tr>
 <% end %>
  </table>
</section>
